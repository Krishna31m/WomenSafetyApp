<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".RecorderActivity">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¤ Emergency Audio Recorder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/header_background"
        android:textColor="@android:color/white" />

    <!-- Recording Status Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recording Status"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/recordingStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to record"
            android:textSize="16sp"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/status_background"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Timer Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â±ï¸ Duration: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

    </LinearLayout>

    <!-- Recording Controls Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recording Controls"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black" />

        <!-- Record Button -->
        <Button
            android:id="@+id/recordButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="ðŸŽ¤ Start Recording"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/record_button_background"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Stop Button -->
        <Button
            android:id="@+id/stopRecordButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="â¹ï¸ Stop Recording"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/stop_button_background"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Instructions Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â„¹ï¸ Instructions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Recording starts automatically when SOS is activated\nâ€¢ Audio files are saved locally\nâ€¢ Recordings are mentioned in SOS alerts\nâ€¢ Stop recording manually or when SOS stops"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Warning -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âš ï¸ Recordings may be used as evidence. Follow local laws."
        android:textSize="12sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:background="@drawable/warning_background" />

</LinearLayout>







