<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Toolbar for menu (Profile / Logout) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:title="RakshaSetu"
        android:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Header (optional since Toolbar has title) -->
            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš¨ Welcome!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/header_background"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp" />

            <!-- Contacts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ž Emergency Contacts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add at least 3 emergency contacts who will receive your SOS alerts:"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"
                    android:textColor="@android:color/darker_gray" />

                <!-- Container for dynamic contact fields -->
                <LinearLayout
                    android:id="@+id/contactsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp" />

                <!-- Contact management buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/addContactButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âž• Add Contact"
                        android:background="@drawable/button_secondary"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/saveContactsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’¾ Save Contacts"
                        android:background="@drawable/button_primary"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="8dp"
                        android:padding="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- SOS Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†˜ Emergency SOS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In case of emergency, press the SOS button below. This will:\nâ€¢ Send alert messages to all your contacts\nâ€¢ Include your live location link\nâ€¢ Continue sending location updates every 30 seconds"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@android:color/darker_gray" />

                <!-- SOS Buttons -->
                <Button
                    android:id="@+id/sosButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="ðŸ†˜ EMERGENCY SOS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/sos_button_background"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/stopSosButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="â¹ï¸ Stop SOS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/stop_button_background"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Status Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready - Add contacts and save to enable SOS"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:background="@drawable/status_background"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Warning Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš ï¸ WARNING: Use this app only in genuine emergencies. Misuse may result in unnecessary panic and resource wastage."
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:background="@drawable/warning_background" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>
